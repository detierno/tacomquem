<%- model_class = @lend.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:user_id) %>:</strong><br>
  <%= @lend.user_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:item) %>:</strong><br>
  <%= @lend.item %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:friend_name) %>:</strong><br>
  <%= @lend.friend_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:friend_id) %>:</strong><br>
  <%= @lend.friend_id %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lends_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lend_path(@lend), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lend_path(@lend),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
